<li class="articles-list__article">
  <div>
    <div class="article-link">
      <div class="article-link__main">
        <a href="<%= post.uri %>">
          <%= post.body %>
        </a>
      </div>
      <div class="article-link__home">
        (
        <%= post.host_uri %>)
      </div>
    </div>
    <div class="article-subtitle">
      123 points by
      <a href="#">
        <%= post.username %></a>
      <a href="#">
        <%= post.created_at %></a>
      |
      <a href="#">report</a>
      |


      <% if (post.number_comments > 0) { %>
      <a href="/posts/<%= post.id %>/comments"><%= post.number_comments %> comments</a>
      <% } else if (session.username) { %>
      <a href="/posts/<%= post.id %>/comments/new">comment</a>
      <% } else {%>
      no comments
      <% } %>
    </div>
  </div>
</li>
